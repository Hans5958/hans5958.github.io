---
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"
import Base from "./Base.astro"
import { type BaseProps } from "@/config"

export interface Props extends BaseProps, astroHTML.JSX.Element {}

let props = Astro.props
---

<Base { ...props } class="h-screen flex flex-col justify-between">
	<Header />
	<main id="content" class="grow">
		<slot />
	</main>
	<Footer />
</Base>
